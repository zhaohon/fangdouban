.kuang{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    
}
.kuang .item{
    width: 33.33%;
    box-sizing: border-box;
    text-align: center;
    margin-bottom: 50rpx;
    position: relative;
}
.kuang .item image{
    width: 150rpx;
    height: 200rpx;
    display: block;
    margin: 0 auto;
    border-radius: 8rpx;
    text-align: center;
}
.kuang .item text{
    font-size: 20rpx;
    /* width: 140rpx; */
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    /* margin-left: 53rpx; */
    margin-top: 10rpx;
}
.kuang .item .xin{
    overflow: hidden;
    width: 180rpx;
    height: 60rpx;
    box-sizing: border-box;
    margin-top: -30rpx;
    position: absolute;
    bottom: -31rpx;
    left: 37rpx;
    display: flex;
    
    
}
.kuang .item .xin .fen{
    font-size: 23rpx;
    margin-left: 30rpx;
    margin-top: 22rpx;
    font-weight: 100;
}


.kuang .item .xin .van-rate .van-rate__item{
    display: inline-block;
    width: 5rpx;
    margin-top: -200rpx;
    margin-left: 17rpx;
    padding: 0;
    
}
