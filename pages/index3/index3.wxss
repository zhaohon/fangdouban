.kuang{
    background-color: #f1f2f6;
}
.kuang .tou{
    height: 350rpx;
    /* background-color: aqua; */
    padding: 35rpx 30rpx;
    box-sizing: border-box;
    display: flex;
}
.kuang .tou image{
    display: inline-block;
    /* background-color: blue; */
    width: 200rpx;
    height: 280rpx;
    border-radius: 8rpx;
    box-shadow: 0 0 5rpx black;
}
.kuang .tou .you{
    /* display: inline-block; */
    /* background-color: brown; */
    height: 100%;
    margin-left: 35rpx;
}
.kuang .tou .you .shang{
    /* background-color: red; */
}
.kuang .tou .you .shang h2{
    display: block;
    font-size: 42rpx;
    font-weight: 600;
}
.kuang .tou .you .shang .riyu{
    display: block;
    font-size: 30rpx;
    color: #57606f;
    margin-bottom: 15rpx;
}
.kuang .tou .you .shang .shijian{
    display: block;
    font-size: 22rpx;
    color: #57606f;
}
.kuang .tou .you .xia{
    /* background-color: #fff; */
    padding: 35rpx 0 0 15rpx;
    
}
.kuang .tou .you .xia text{
    display: inline-block;
    width: 210rpx;
    height: 60rpx;
    box-shadow: 0 0 5rpx grey;
    background-color: #fff;
    text-align: center;
    font-size: 32rpx;
    line-height: 60rpx;
    font-weight: 500;
    border-radius: 5rpx;
}
.kuang .tou .you .xia .kan{
    margin-left: 20rpx;
}