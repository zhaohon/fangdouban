/* pages/index5/index5.wxss */
.shang{
    box-sizing: border-box;
}
.shang image{
    background-color: aqua;
    width: 100%;
    height: 450rpx;
}
.shang button{
    position: absolute;
    width: 380rpx;
    height: 100rpx;
    border-radius: 50rpx;
    top: 200rpx;
    left: 180rpx;
}
.xia{
    padding: 10rpx 30rpx;
}
.xia .tou{
    display: flex;
    justify-content: space-between;
}
.xia .tou .wode{
    font-size: 38rpx;
    font-weight: 500;
}
.xia .tou .denglu{
    font-size: 26rpx;
    margin-top: -20rpx;
    padding: 20rpx 0 0 0;
    box-sizing: border-box;
    position: relative;
}
.xia .tou .denglu .denglukan{
    height: 50rpx;
    width: 150rpx;
    display: inline-block;
    top: 30rpx;
    right: 0rpx;
    position: absolute;
    
}
.xia .tou .denglu .jian{
    width: 30rpx;
    height: 30rpx;
    margin-top: 15rpx;
}
.xia .con{
    display: flex;
    font-size: 23rpx;
    align-items: flex-end;
    
    
}

.xia .con image{
    width: 60rpx;
    height: 60rpx;
    padding: 0 0 40rpx 0;
    margin-right: 35rpx;
}
.xia .con .item{
    display: flex;
    flex: 1;
    justify-content: space-between;
    width: 80%;
    border-top: 1px solid #f1f2f6;
    padding: 30rpx 0;
}

.xia .con .item .zuo{
    
}
.xia .con .item .zuo .zuoshang{
    margin-bottom: 15rpx;
}
.xia .con .item .zuo .zuoxia{
    font-size: 32rpx;
}
.xia .con .item .zuo .zuoxia .kan{
    font-size: 23rpx;
}
.xia .con .item .you{
    position: relative;
}
.xia .con .item .you .youzuo{
    margin-top: 20rpx;
}
.xia .con .item .you .youzuo{
    display: inline-block;
    width: 150rpx;
    height: 50rpx;
    color: #e1e2e2;
}
.xia .con .item .you button{ 
    width: 150rpx;
    height: 50rpx;
    font-size: 23rpx;
    display: inline-block;
    margin: 0 20rpx;
    margin-right: 40rpx;
}
.xia .con .item .you image{ 
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 40rpx;
    right: -33rpx;
}